{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Project",
            "type": "process",
            "isBuildCommand": true,
            "command": "${userHome}/.pico-sdk/ninja/v1.12.1/ninja",
            "args": [
                "-C",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": "$gcc",
            "windows": {
                "command": "${env:USERPROFILE}/.pico-sdk/ninja/v1.12.1/ninja.exe"
            }
        },
        {
            "label": "Run Project",
            "type": "process",
            "command": "${env:HOME}/.pico-sdk/picotool/2.0.0/picotool/picotool",
            "args": [
                "load",
                "${command:raspberry-pi-pico.launchTargetPath}",
                "-fx"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "windows": {
                "command": "${env:USERPROFILE}/.pico-sdk/picotool/2.0.0/picotool/picotool.exe"
            }
        },
        {
            "label": "Flash",
            "type": "process",
            "command": "${userHome}/.pico-sdk/openocd/0.12.0+dev/openocd.exe",
            "args": [
                "-s",
                "${userHome}/.pico-sdk/openocd/0.12.0+dev/scripts",
                "-f",
                "interface/cmsis-dap.cfg",
                "-f",
                "target/${command:raspberry-pi-pico.getTarget}.cfg",
                "-c",
                "adapter speed 5000; program \"${command:raspberry-pi-pico.launchTargetPath}\" verify reset exit"
            ],
            "problemMatcher": [],
            "windows": {
                "command": "${env:USERPROFILE}/.pico-sdk/openocd/0.12.0+dev/openocd.exe"
            }
        },
        {
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "targets": [
                "[N/A - Select Kit]"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template build task"
        },
        {
            "label": "Generate Doxygen and Build LaTeX",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build", 
                "--target",
                "doc"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generate tex doxygen and build pdf from that"
        },
        {
            "label": "Build test runner",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build", 
                "--target",
                "build_tests"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build executables for test runner project"
        },
        {
            "label": "CodeChecker Analyze",
            "type": "shell",
            "command": "CodeChecker",
            "args": [
                "analyze",
                "${workspaceFolder}/build/compile_commands.json",
                "--enable=all", 
                "-o",
                "${workspaceFolder}/codechecker_report"
            ],
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "CodeChecker Parse and View",
            "type": "shell",
            "command": "CodeChecker",
            "args": [
                "parse",
                "${workspaceFolder}/codechecker_report",
                "-e",
                "html",
                "-o",
                "${workspaceFolder}/codechecker_report/report.html",
                "&&",
                "CodeChecker",
                "server",
                "--view",
                "${workspaceFolder}/codechecker_report/report.html"
            ],
            "group": "none",
            "problemMatcher": [],
            "dependsOn": "CodeChecker Analyze"
        },
        {
            "label": "Generate Dependency Graph",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--graphviz=deps.dot",
                "..",
                "&&",
                "$C:/Program Files/Graphviz/bin/dot",
                "-Tpng",
                "deps.dot",
                "-o",
                "dependency_graph.png"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "none",
            "problemMatcher": [],
            "detail": "Generate complete dependency graph using Graphviz"
        },
        {
            "label": "Generate Target-Specific Dependency Graph",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--graphviz=target_deps.dot",
                "--graphviz-target=${input:targetName}",
                "..",
                "&&",
                "$C:/Program Files/Graphviz/bin/dot",
                "-Tpng",
                "target_deps.dot", 
                "-o",
                "${input:targetName}_deps.png"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "none",
            "problemMatcher": [],
            "detail": "Generate dependency graph for specific target using Graphviz"
        },
        {
            "label": "Generate Reduced Dependency Graph",
            "type": "shell",
            "command": "C:/Program Files/Graphviz/bin/tred",
            "args": [
                "deps.dot",
                ">",
                "deps_reduced.dot",
                "&&",
                "C:/Program Files/Graphviz/bin",
                "-Tpng",
                "deps_reduced.dot",
                "-o",
                "dependency_graph_reduced.png"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build",
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "group": "none",
            "problemMatcher": [],
            "detail": "Generate reduced dependency graph (removes transitive edges)",
            "dependsOn": "Generate Dependency Graph"
        },
        {
            "label": "Generate Project-Only Dependency Graph",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--graphviz=project_deps.dot",
                "..",
                "&&",
                "findstr",
                "/V",
                "\"pico_stdlib hardware_ pico_\"",
                "project_deps.dot",
                ">",
                "project_deps_filtered.dot",
                "&&",
                "\"C:/Program Files/Graphviz/bin/dot\"",
                "-Tpng",
                "project_deps_filtered.dot",
                "-o",
                "project_deps.png"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build",
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "group": "none",
            "problemMatcher": [],
            "detail": "Generate dependency graph excluding system and Pico SDK libraries"
        }
    ],
    "inputs": [
        {
            "id": "targetName",
            "type": "promptString",
            "description": "Name of the target to generate dependency graph for",
            "default": "kubisat_firmware"
        }
    ]
}
