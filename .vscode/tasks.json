{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Project",
            "type": "process",
            "isBuildCommand": true,
            "command": "${userHome}/.pico-sdk/ninja/v1.12.1/ninja",
            "args": [
                "-C",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": "$gcc",
            "windows": {
                "command": "${env:USERPROFILE}/.pico-sdk/ninja/v1.12.1/ninja.exe"
            }
        },
        {
            "label": "Run Project",
            "type": "process",
            "command": "${env:HOME}/.pico-sdk/picotool/2.0.0/picotool/picotool",
            "args": [
                "load",
                "${command:raspberry-pi-pico.launchTargetPath}",
                "-fx"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "windows": {
                "command": "${env:USERPROFILE}/.pico-sdk/picotool/2.0.0/picotool/picotool.exe"
            }
        },
        {
            "label": "Flash",
            "type": "process",
            "command": "${userHome}/.pico-sdk/openocd/0.12.0+dev/openocd.exe",
            "args": [
                "-s",
                "${userHome}/.pico-sdk/openocd/0.12.0+dev/scripts",
                "-f",
                "interface/cmsis-dap.cfg",
                "-f",
                "target/${command:raspberry-pi-pico.getTarget}.cfg",
                "-c",
                "adapter speed 5000; program \"${command:raspberry-pi-pico.launchTargetPath}\" verify reset exit"
            ],
            "problemMatcher": [],
            "windows": {
                "command": "${env:USERPROFILE}/.pico-sdk/openocd/0.12.0+dev/openocd.exe"
            }
        },
        {
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "targets": [
                "[N/A - Select Kit]"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template build task"
        },
        {
            "label": "Generate Doxygen and Build LaTeX",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "doc"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generate tex doxygen and build pdf from that"
        },
        {
            "label": "Build test runner",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "build_tests"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build executables for test runner project"
        },
        {
            "label": "Generate Dependency Graph",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--graphviz=deps.dot",
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "none",
            "problemMatcher": [],
            "detail": "Generate complete dependency graph using Graphviz",
            "dependsOn": "Generate CMake Graphviz Dot File"
        },
        {
            "label": "Convert Dependency Graph to PNG",
            "type": "shell",
            "command": "\"C:/Program Files/Graphviz/bin/dot\"",
            "args": [
                "-Tpng",
                "${workspaceFolder}/build/deps.dot",
                "-o",
                "${workspaceFolder}/build/dependency_graph.png"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "none",
            "problemMatcher": [],
            "detail": "Convert the .dot file to a .png image",
            "dependsOn": "Generate Dependency Graph"
        },
        {
            "label": "Generate All Dependency Graphs",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--graphviz=all_deps.dot",
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "none",
            "problemMatcher": [],
            "detail": "Generate all dependency graphs (.dot files)",
            "dependsOn": "Compile Project"
        }
    ],
    "inputs": [
        {
            "id": "targetName",
            "type": "promptString",
            "description": "Name of the target to generate dependency graph for",
            "default": "kubisat_firmware"
        }
    ]
}